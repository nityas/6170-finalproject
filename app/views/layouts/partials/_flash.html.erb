<div class="row">
  <div class="columns large-12">
    <div id="flash">
      <% flash.each do |name, msg| -%>
        <div data-alert class="alert-box secondary">
          <%= content_tag :div, msg, class: name %>
          <a href="#" class="close">&times;</a>
        </div>
      <% end %>
    </div>
  </div>
</div>