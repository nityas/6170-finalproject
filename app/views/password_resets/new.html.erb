<center><br>
	<h1>Reset Your Password</h1>

	<%= form_tag password_resets_path, :method => :post do %>
	  <div class="field">
	  	<p>An email will be sent with instructions on how to reset your password</p>
	    <%= text_field_tag :email, params[:email], :placeholder => "Email Address" %>
	  </div>
	  <div class="actions"><%= submit_tag "Reset Password", class: "btn btn-primary" %></div>
	<% end %>
</center>