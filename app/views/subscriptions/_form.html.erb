<%= form_for(@subscription) do |f| %>
  <% if @subscription.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

      <ul>
      <% @subscription.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :location_id, :value => @location.id %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="actions">
    <%if @subscription.subscribed(@location,current_user.id)%>
      <% unless current_user.can_subscribe?()%>
        <%= f.submit "subscribe", :class => "submit_byte btn btn-primary" %>
      <%end%>
    <%else%>
    <button class="btn btn-primary"><%=link_to 'unsubscribe', Subscription.where(location_id:@location.id , user_id: current_user.id).first,:id => "unsubscribe", method: :delete, data: { confirm: 'Are you sure?' }  %></button>

    <%end%>  
  </div>
<% end %>
