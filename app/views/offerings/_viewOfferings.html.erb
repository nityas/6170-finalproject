 <div>
  <table class="view_offerings_table">

      <tr>
        <th>Where</th>
        <th>What</th>


        <th>Give an update</th>

    
      </tr>

    <% @location.offerings.each do |offering| %>
      <tr>
        <td><%= offering.sub_location %></td>
        <td><%= offering.description %></td>

        <!-- show interface for voting 'all gone' only if user hasn't already voted on this before -->
       <%if @vote_history.index(offering.id) == nil %>

         <td><%= link_to 'Click if all gone', offering,  :remote => true, :class => "#{offering.id} vote_destroy", :format => :js ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% else %>
          <td></td>
       <% end %>
 
      </tr>
    <% end %>
  </table>
</div>