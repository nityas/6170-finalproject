
<h2><b>Building <%= @location.building_number %> - <%= @location.title %></b></h2>
<div id="tabs">
  <ul class="nav nav-tabs" id="myTab">
    <% if signed_in? %>
      <li class="active"><a data-toggle="tab" href="#tabs-1">Post a Byte</a></li>
      <li class=""><a data-toggle="tab" href="#tabs-2">View Bytes</a></li>
    <% else %>
      <li class="active"><a data-toggle="tab" href="#tabs-2">View Bytes</a></li>
    <% end %>    
  </ul>

  <center>
    <div class="tab-content" id="myTabContent">
      <% if signed_in? %>
        <div id="tabs-1" class="tab-pane fade active in">
          <%= render partial: "offerings/createNewByteTab", locals: {offering: @offering} %>
        </div>
        <div id="tabs-2"  class="tab-pane fade">
          <%= render partial: "offerings/viewOfferings"%>
        </div>
      <% else %>
        <div id="tabs-2"  class="tab-pane fade active in">
          <%= render partial: "offerings/viewOfferings"%>
        </div>
      <% end %>
    </div>
  </center>
</div>

